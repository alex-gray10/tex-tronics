<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="edu.uri.wbl.tex_tronics.smartglove.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/connect_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="80dp"
        android:text="Connect"/>

    <Button
        android:id="@+id/disconnect_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/connect_btn1"
        android:layout_below="@+id/connect_btn1"
        android:layout_marginTop="34dp"
        android:text="Disconnect"/>

    <Button
        android:id="@+id/connect_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/connect_btn1"
        android:layout_marginEnd="24dp"
        android:text="Connect"/>

    <Button
        android:id="@+id/disconnect_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/disconnect_btn1"
        android:layout_alignBottom="@+id/disconnect_btn1"
        android:layout_alignEnd="@+id/connect_btn2"
        android:text="Disconnect"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/connect_btn2"
        android:layout_alignStart="@+id/connect_btn1"
        android:layout_marginBottom="22dp"
        android:text="Left Shoe"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/connect_btn2"
        android:text="Right Shoe"
        android:textSize="18sp"/>

</RelativeLayout>
