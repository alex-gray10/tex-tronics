                <TextView
                    android:id="@+id/left_sock_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Right Sock Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
